<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF6B35"
    android:padding="32dp">

    <!-- Alarm Icon -->
    <TextView
        android:id="@+id/alarmIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="â°"
        android:textSize="80sp"
        android:textColor="#FFFFFF" />

    <!-- Current Time -->
    <TextView
        android:id="@+id/alarmTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarmIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="12:00"
        android:textSize="72sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <!-- Task Title -->
    <TextView
        android:id="@+id/alarmTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarmTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Task Reminder"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold" />

    <!-- Label -->
    <TextView
        android:id="@+id/alarmLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarmTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Task Alarm"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:alpha="0.9" />

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Snooze Button -->
        <Button
            android:id="@+id/snoozeButton"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            android:text="Snooze\n5 min"
            android:textSize="16sp"
            android:textColor="#FF6B35"
            android:background="@drawable/alarm_button_bg"
            android:padding="12dp" />

        <!-- Dismiss Button -->
        <Button
            android:id="@+id/dismissButton"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Dismiss"
            android:textSize="18sp"
            android:textColor="#FF6B35"
            android:background="@drawable/alarm_button_bg"
            android:textStyle="bold"
            android:padding="12dp" />

    </LinearLayout>

</RelativeLayout>
