<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000">

    <!-- Centered card container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="32dp"
        android:background="@drawable/alarm_card_bg">

        <!-- Pulsing ring icon -->
        <TextView
            android:id="@+id/alarmIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="ðŸ””"
            android:textSize="44sp"
            android:background="@drawable/alarm_icon_ring" />

        <!-- ALARM label -->
        <TextView
            android:id="@+id/alarmLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="ALARM"
            android:textSize="13sp"
            android:textColor="#80FFFFFF"
            android:letterSpacing="0.3"
            android:textStyle="bold" />

        <!-- Current Time -->
        <TextView
            android:id="@+id/alarmTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="12:00"
            android:textSize="56sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light" />

        <!-- Divider -->
        <View
            android:layout_width="48dp"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:background="#33FFFFFF" />

        <!-- Task Title -->
        <TextView
            android:id="@+id/alarmTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Task Reminder"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"
            android:maxLines="3"
            android:ellipsize="end" />

        <!-- Mark as Complete button -->
        <Button
            android:id="@+id/completeButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:text="âœ“  Mark as Complete"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/alarm_complete_btn_bg"
            android:stateListAnimator="@null" />

        <!-- Dismiss button -->
        <Button
            android:id="@+id/dismissButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:text="Dismiss"
            android:textSize="15sp"
            android:textColor="#80FFFFFF"
            android:textAllCaps="false"
            android:background="@android:color/transparent"
            android:stateListAnimator="@null" />

    </LinearLayout>

</FrameLayout>
